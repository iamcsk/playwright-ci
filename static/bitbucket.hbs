pipelines:
  default:
    - step:
        name: Playwright Tests
        image: qawolf/playwright-ci:v{{{version}}}
        caches:
          - node
        script:
          - npm install
          ## Start local server
          # - npm run start & npx wait-on http://localhost:3000

          {{#if qawolf}}
          - npx qawolf test
          {{else}}
          # replace below with command you want to run, example for running a script below
          # - node myScript.js
          - npm test
          {{/if}}
